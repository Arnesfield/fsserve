{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ESNext"],
    "strict": true,
    "noEmit": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node"
  },
  "include": ["packages/api/src/**/*", "rollup.config.ts"],
  "exclude": ["node_modules", "dist", "lib", "tmp"]
}
