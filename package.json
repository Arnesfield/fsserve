{
  "name": "fsserve",
  "version": "0.0.1",
  "description": "Upload and download files from file system.",
  "homepage": "https://github.com/Arnesfield/fsserve#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/fsserve/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/fsserve.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs",
    "default": "./lib/index.mjs"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "bin": {
    "fsserve": "bin/cli.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild:api": "rimraf lib",
    "build:api": "node scripts/build",
    "check": "concurrently -r --kill-others-on-fail npm:lint:strict \"tsc --noEmit\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "test": "concurrently -r --kill-others-on-fail npm:test:mocha npm:check",
    "test:mocha": "mocha -r esbuild-runner/register **/*.spec.ts",
    "test:watch": "npm run test:mocha -- --watch --watch-files src"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
