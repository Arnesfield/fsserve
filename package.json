{
  "name": "fsserve",
  "version": "0.0.1",
  "description": "Upload and download files from file system.",
  "homepage": "https://github.com/Arnesfield/fsserve#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/fsserve/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/fsserve.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs",
    "default": "./lib/index.mjs"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "bin": {
    "fsserve": "bin/cli.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild:api": "rimraf lib",
    "build:api": "node scripts/build",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "test": "concurrently -r --kill-others-on-fail npm:test:mocha npm:check",
    "test:mocha": "mocha -r esbuild-runner/register **/*.spec.ts",
    "test:watch": "npm run test:mocha -- --watch --watch-files src"
  },
  "dependencies": {
    "chalk-template": "^0.4.0",
    "commander": "^9.4.1",
    "common-path-prefix": "^3.0.0",
    "fastify": "^4.10.2",
    "http-errors": "^2.0.0",
    "jszip": "^3.10.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-json": "^5.0.2",
    "@types/chai": "^4.3.4",
    "@types/http-errors": "^2.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.16",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "ajv": "^8.11.2",
    "chai": "^4.3.7",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.8",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.30.0",
    "lerna": "^6.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.5",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "sinon": "^15.0.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
