{
  "include": ["src/**/*", "rollup.config.ts"],
  "exclude": ["tmp"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ESNext"],
    "strict": true,
    "noEmit": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node"
  }
}
